<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane id="generalGrid" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" stylesheets="@../../styles/ihmmain.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.utclo23.ihmmain.controller.GameListController">
    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints percentHeight="10.0" vgrow="SOMETIMES" />
        <RowConstraints percentHeight="80.0" vgrow="SOMETIMES" />
        <RowConstraints percentHeight="10.0" vgrow="SOMETIMES" />
    </rowConstraints>
    <children>
        <Label text="Games" GridPane.columnIndex="0" GridPane.halignment="CENTER" GridPane.rowIndex="0" GridPane.valignment="CENTER" />
        <ScrollPane id="gameListPane" fx:id="gameListPane" fitToHeight="true" fitToWidth="true" prefHeight="200.0" prefWidth="200.0" GridPane.rowIndex="1" />
        <GridPane id="ManageGrid" GridPane.rowIndex="2">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" percentWidth="33.0" />
                <ColumnConstraints hgrow="SOMETIMES" percentWidth="34.0" />
                <ColumnConstraints hgrow="SOMETIMES" percentWidth="33.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="33.0" prefWidth="100.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints percentHeight="100.0" vgrow="SOMETIMES" />
            </rowConstraints>
            <children>
                <Button fx:id="joinButton" mnemonicParsing="false" onAction="#joinSelectedGame" text="Join" GridPane.halignment="CENTER" GridPane.valignment="CENTER">
                    <tooltip>
                        <Tooltip text="Click to join the selected game as a player."/>
                    </tooltip>
                </Button>
                <Button fx:id="createButton" mnemonicParsing="false" onAction="#createNewGame" text="Create" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="0" GridPane.valignment="CENTER">
                    <tooltip>
                        <Tooltip text="Click to create a new game."/>
                    </tooltip>
                </Button>
                <Button fx:id="returnButton" mnemonicParsing="false" onAction="#returnMenu" text="RETURN" GridPane.columnIndex="3" GridPane.halignment="CENTER" GridPane.valignment="CENTER">
                    <tooltip>
                        <Tooltip text="Click to return to the previous page."/>
                    </tooltip>
                </Button>    
                <Button fx:id="watchButton" mnemonicParsing="false" onAction="#watchSelectedGame" text="Watch" GridPane.columnIndex="2" GridPane.halignment="CENTER" GridPane.valignment="CENTER">
                    <tooltip>
                        <Tooltip text="Click to join the selected game as a spectator."/>
                    </tooltip>
                </Button>
            </children>
        </GridPane>
    </children>
</GridPane>
